{
  "name": "aws-bookstore-fullstack",
  "version": "1.0.0",
  "description": "AWS Bookstore - 全栈单体应用（包含前端和后端）",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd frontend && npm install && npm run build",
    "install-all": "npm install && cd frontend && npm install",
    "init-db": "node scripts/init-db.js",
    "test-api": "bash scripts/test-api.sh",
    "dev-frontend": "cd frontend && npm start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "bookstore",
    "monolith",
    "express",
    "aws",
    "dynamodb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "aws-sdk": "^2.1490.0",
    "uuid": "^9.0.1",
    "redis": "^3.1.2",
    "@elastic/elasticsearch": "^7.17.0",
    "@acuris/aws-es-connection": "^1.0.2",
    "gremlin": "^3.6.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
