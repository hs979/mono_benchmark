# 服务器配置
PORT=3000
NODE_ENV=development

# AWS配置
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# DynamoDB表名配置
BOOKS_TABLE=Bookstore-Books
CART_TABLE=Bookstore-Cart
ORDERS_TABLE=Bookstore-Orders
USERS_TABLE=Bookstore-Users
# DYNAMODB_ENDPOINT=http://localhost:8000  # 可选: 用于本地DynamoDB

# JWT配置
JWT_SECRET=your-secret-key-change-in-production-must-be-strong
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-must-be-strong
JWT_ACCESS_TOKEN_EXPIRY=1h
JWT_REFRESH_TOKEN_EXPIRY=7d

# 认证模式
# 开发模式: 允许使用x-customer-id请求头跳过JWT验证
# 生产模式: 必须使用JWT认证
AUTH_DEV_MODE=true

# Redis配置
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password  # 可选

# Elasticsearch配置
ES_ENABLED=true
ES_ENDPOINT=your-elasticsearch-endpoint.region.es.amazonaws.com
ES_INDEX=lambda-index
ES_TYPE=lambda-type

# Neptune配置
NEPTUNE_ENABLED=true
NEPTUNE_ENDPOINT=your-neptune-cluster.cluster-xxxxx.region.neptune.amazonaws.com
NEPTUNE_PORT=8182

